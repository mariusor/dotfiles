
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

#bindsym $mod+Return exec tilix
# output
set $Locker /usr/bin/swaylock -i ~/Pictures/wallpapers/PlutoNight.jpg --indicator-radius=80 -c 222222
#output "*" bg ~/Pictures/wallpapers/PlutoNight.jpg fill #222222
#output HDMI-A-1 res 2560x1440
set $Locker /usr/bin/swaylock -i ~/Pictures/wallpapers/micleusanu-blur.jpg --indicator-radius=80 -c 222222
output * {
    bg ~/Pictures/wallpapers/micleusanu-blur.jpg fill #222222
}


input type:keyboard {
    repeat_rate 90
    xkb_layout us
    #xkb_model intl
    xkb_options caps:swapescape
}

input "7847:100:Speedlink__Vertical__Mouse__Mouse" {
    accel_profile adaptive
    pointer_accel 0.7
}

input "14248:1:Ultimate_Gadget_Laboratories_UHK_60_v1" {
    middle_emulation enabled
    drag_lock enabled

    repeat_rate 90
    xkb_layout us
    xkb_model intl
    xkb_options caps:swapescape
}

