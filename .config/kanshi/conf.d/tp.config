profile on-the-move {
	output eDP-1 mode 3840x2160 position 0,0 scale 2
	exec swaymsg output eDP-1 scale 2
}

profile home-setup {
	output eDP-1 mode 3840x2160 position 0,900 scale 2
	output 'Dell Inc. DELL U2515H 9X2VY61N052L' mode 2560x1440 position 1920,0 scale 1
}

profile work {
	output eDP-1 mode 3840x2160 position 0,1640 scale 2.4
	output DP-4 mode 2560x1440 position 1920,200 scale 1
	output HDMI-A-1 mode 2560x1440 position 4480,0 scale 1 transform 270

	exec swaymsg output eDP-1 scale 2.4
}

